{% extends "base.html.twig" %}

{% block title %}
	Création d'une catégories
{% endblock %}

{% block body %}
	<h1>Créer une catégorie</h1>
	{{form_start(form)}}
	{{form_errors(form)}}

	<div class="row">
		<div class="col mt-4">
			{{ form_row(form.name) }}
		</div>
	</div>

	<button type="submit" class="btn btn-success mt-4">
		<i class="fas fa-save me-2"></i>Créer la catégorie</button>

	{{form_end(form)}}


{% endblock %}
